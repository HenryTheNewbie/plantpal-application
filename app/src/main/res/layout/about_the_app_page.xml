<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutTheAppActivity">

    <!-- Page Header -->
    <RelativeLayout
        android:id="@+id/about_the_app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/page_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/about_the_app_back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/back_arrow_icon"
            android:clickable="true"/>

        <TextView
            android:id="@+id/about_the_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About The App"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/agrandir_wide"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/about_the_app_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_the_app_header"
        android:padding="16dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/about_the_app_logo"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/plantpal_logo_with_text"
                    android:paddingBottom="24dp"/>

                <TextView
                    android:id="@+id/about_the_app_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About PlantPal"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/agrandir_wide"
                    android:lineSpacingExtra="8dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/aboutTheAppText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>