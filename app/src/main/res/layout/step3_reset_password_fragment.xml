<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Step3ResetPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/reset_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:padding="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/agrandir_wide" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/enter_new_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter New Password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/agrandir_regular"
            android:layout_marginLeft="-85dp"
            android:paddingTop="51dp"
            android:paddingBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/new_password"
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_field_box"
                android:drawableStart="@drawable/lock_icon"
                android:drawablePadding="8dp"
                android:hint="New Password"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:inputType="textPassword"
                android:fontFamily="@font/agrandir_regular"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/enter_confirm_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/agrandir_regular"
            android:layout_marginLeft="-94dp"
            android:paddingTop="20dp"
            android:paddingBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_field_box"
                android:drawableStart="@drawable/lock_icon"
                android:drawablePadding="8dp"
                android:hint="Confirm Password"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:inputType="textPassword"
                android:fontFamily="@font/agrandir_regular"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">

            <Button
                android:id="@+id/reset_password_button"
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_field_box"
                android:text="Reset Password"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/agrandir_regular"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>