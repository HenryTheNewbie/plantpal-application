<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forum Title"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/agrandir_wide"
            android:layout_alignParentTop="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_below="@id/forum_title"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/forum_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created on: XX/XX/XXXX"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/agrandir_regular"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/forum_replies_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replies: X"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/agrandir_regular"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/forum_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By: Author"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/agrandir_regular"/>
        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>