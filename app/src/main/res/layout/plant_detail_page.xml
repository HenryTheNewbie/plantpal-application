<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantDetailActivity">

    <!-- Page Header -->
    <RelativeLayout
        android:id="@+id/plant_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/page_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/plant_detail_back_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/back_arrow_icon"
            android:clickable="true"/>

        <!-- Plant Common Name -->
        <TextView
            android:id="@+id/plant_common_name_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="270dp"
            android:text="Plant Common Name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/agrandir_regular"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>

        <!-- Plant Scientific Name -->
        <TextView
            android:id="@+id/plant_scientific_name_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="270dp"
            android:text="Plant Scientific Name"
            android:textSize="16sp"
            android:textColor="#808080"
            android:textStyle="italic"
            android:fontFamily="@font/agrandir_regular"
            android:layout_below="@id/plant_common_name_placeholder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/bookmark_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/unmarked_bookmark_icon"
            android:clickable="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plant_detail_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Plant Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/plant_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_plant_placeholder"
                app:shapeAppearanceOverlay="@style/CustomImageCorner"
                android:scaleType="centerCrop"/>

            <!-- Card For Plant Family And Description -->
            <RelativeLayout
                android:id="@+id/plant_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_card_background"
                android:elevation="5dp"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <!-- Plant Family -->
                <TextView
                    android:id="@+id/plant_family_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant Family"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:lineSpacingExtra="4dp"/>

                <!-- Plant Description -->
                <TextView
                    android:id="@+id/plant_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant Description"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/plant_family_text"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Pale Gray Line Separator -->
                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:layout_below="@id/plant_description_text"
                    android:layout_marginTop="8dp"/>

                <!-- Plant Category -->
                <TextView
                    android:id="@+id/plant_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant Category"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/separator"
                    android:layout_marginTop="7dp"
                    android:lineSpacingExtra="4dp"/>
            </RelativeLayout>

            <!-- Card For Plant Care Information -->
            <RelativeLayout
                android:id="@+id/plant_care_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_card_background"
                android:elevation="5dp"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sunlight -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/plant_sunlight_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/sun_icon"/>

                        <TextView
                            android:id="@+id/plant_sunlight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Sunlight"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/agrandir_regular"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <!-- Water -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/plant_water_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/water_icon"/>

                        <TextView
                            android:id="@+id/plant_water"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Water"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/agrandir_regular"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <!-- Soil -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/plant_soil_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/soil_icon"/>

                        <TextView
                            android:id="@+id/plant_soil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Soil"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/agrandir_regular"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <!-- Fertilizer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/plant_fertilizer_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/fertilizer_icon"/>

                        <TextView
                            android:id="@+id/plant_fertilizer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Fertilizer"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/agrandir_regular"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <!-- Temperature -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/plant_temperature_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/thermometer_icon"/>

                        <TextView
                            android:id="@+id/plant_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Temperature"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/agrandir_regular"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/plant_humidity_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/humidity_icon"/>

                        <TextView
                            android:id="@+id/plant_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Humidity"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/agrandir_regular"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Card for Extra Care Information -->
            <RelativeLayout
                android:id="@+id/plant_extra_care_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_card_background"
                android:elevation="5dp"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <!-- Extra Care Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/plant_extra_information_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/extra_information_icon"/>

                    <TextView
                        android:id="@+id/plant_extra_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Extra Care Information"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/agrandir_regular"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- Card for Herbal Properties -->
            <RelativeLayout
                android:id="@+id/plant_herbal_properties_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_card_background"
                android:elevation="5dp"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp">

                <!-- Extra Care Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/plant_herbal_properties_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/herbal_icon"/>

                    <TextView
                        android:id="@+id/plant_herbal_properties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Herbal Properties"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/agrandir_regular"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </RelativeLayout>

            <!-- Card for Possible Disease Information -->
            <RelativeLayout
                android:id="@+id/plant_possible_disease_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_card_background"
                android:elevation="5dp"
                android:padding="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <!-- Possible Disease Detected -->
                <LinearLayout
                    android:id="@+id/plant_possible_disease_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/plant_possible_disease_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/possible_disease_detected_icon"/>

                    <TextView
                        android:id="@+id/plant_possible_disease_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Possible Disease Detected"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/agrandir_regular"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>

                <!-- Detected Disease Common Name -->
                <TextView
                    android:id="@+id/detected_disease_common_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disease Common Name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/plant_possible_disease_title"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Detected Disease Scientific Name -->
                <TextView
                    android:id="@+id/detected_disease_scientific_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disease Scientific Name"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:textColor="#808080"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/detected_disease_common_name"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Pale Gray Line Separator -->
                <View
                    android:id="@+id/disease_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D3D3"
                    android:layout_below="@id/detected_disease_scientific_name"
                    android:layout_marginTop="8dp"/>

                <!-- Disease Description -->
                <TextView
                    android:id="@+id/detected_disease_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disease Description"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_separator"
                    android:layout_marginTop="7dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Possible Causes -->
                <TextView
                    android:id="@+id/disease_possible_causes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Possible Causes"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/detected_disease_description"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="4dp"/>

                <TextView
                    android:id="@+id/disease_possible_causes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Possible Causes Text"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_possible_causes"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Prevention Methods -->
                <TextView
                    android:id="@+id/disease_prevention_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prevention Method"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_possible_causes_text"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <TextView
                    android:id="@+id/disease_prevention_method_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prevention Method Text"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_prevention_method"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Treatment Suggestions -->
                <TextView
                    android:id="@+id/disease_treatment_suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treatment Suggestion"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_prevention_method_text"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <TextView
                    android:id="@+id/disease_treatment_suggestion_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treatment Suggestion Text"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_treatment_suggestion"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Visible Symptoms -->
                <TextView
                    android:id="@+id/disease_visible_symptoms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visible Symptoms"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_treatment_suggestion_text"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>

                <TextView
                    android:id="@+id/disease_visible_symptoms_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visible Symptoms Text"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/agrandir_regular"
                    android:layout_below="@id/disease_visible_symptoms"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"/>
            </RelativeLayout>

            <!-- View for Extra Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>